<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_dark"
        android:orientation="horizontal"
        tools:ignore="NewApi,UselessParent">


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/Title"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <ImageButton
                android:id="@+id/language"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/Title"
                android:fitsSystemWindows="false"
                android:isScrollContainer="false"
                android:keepScreenOn="false"
                android:scaleType="fitCenter"
                android:src="@drawable/ru_"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/Title"
                android:onClick="onMenuClicked"
                android:src="@drawable/settings"
                tools:ignore="ContentDescription" />

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:clickable="false"
                    android:focusable="false"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/GrreenMan"
                        android:checked="true"
                        android:onClick="onRadioButtonClicked"
                        android:tag="246.942"
                        android:text="B3"
                        android:textColor="@color/GrreenMan"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText"
                        tools:targetApi="lollipop" />

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/GrreenMan"
                        android:onClick="onRadioButtonClicked"
                        android:tag="195.998"
                        android:text="G3"
                        android:textColor="@color/GrreenMan"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,UnusedAttribute" />

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/GrreenMan"
                        android:onClick="onRadioButtonClicked"
                        android:tag="146.832"
                        android:text="D3"
                        android:textColor="@color/GrreenMan"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,UnusedAttribute" />

                    <RadioButton
                        android:id="@+id/radio3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/GrreenMan"
                        android:onClick="onRadioButtonClicked"
                        android:tag="110.0"
                        android:text="A2"
                        android:textColor="@color/GrreenMan"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,UnusedAttribute" />

                    <RadioButton
                        android:id="@+id/radio4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/GrreenMan"
                        android:onClick="onRadioButtonClicked"
                        android:tag="82.4069"
                        android:text="E2"
                        android:textColor="@color/GrreenMan"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,UnusedAttribute" />

                    <RadioButton
                        android:id="@+id/radio5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/GrreenMan"
                        android:onClick="onRadioButtonClicked"
                        android:tag="61.7354"
                        android:text="B1"
                        android:textColor="@color/GrreenMan"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,UnusedAttribute" />
                </RadioGroup>

            </ScrollView>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_dark"
            android:orientation="vertical"
            tools:ignore="NewApi">

            <FrameLayout
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                tools:ignore="ObsoleteLayoutParam,RtlHardcoded">

                <TextView
                    android:id="@+id/Hz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:text="0.0 Hz"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextViewEdits"
                    tools:targetApi="ice_cream_sandwich" />

                <TextView
                    android:id="@+id/aim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="35dp"
                    android:autoText="false"
                    android:gravity="right"
                    android:text="0.0 Hz"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="Deprecated,HardcodedText,NewApi,RtlHardcoded,TextViewEdits" />

                <LinearLayout
                    android:id="@+id/top_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/Title"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tuning_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:text="@string/e_std"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/GrreenMan"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        android:text="0.0 Hz"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/GrreenMan"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                </LinearLayout>
            </FrameLayout>

            <russianapp.tools.guitar_tunings.graphics.DialView
                android:id="@+id/dial"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="33dp"
                tools:ignore="InefficientWeight" />

            <LinearLayout
                android:id="@+id/baner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tuning_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:foregroundGravity="bottom"
                    android:gravity="bottom|center_horizontal"
                    android:text="It is the ads time..."
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/GrreenMan"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:ignore="HardcodedText,InefficientWeight,RtlHardcoded,RtlSymmetry" />

                    <com.google.android.gms.ads.AdView
                        android:id="@+id/adView"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ads:adSize="SMART_BANNER"
                        ads:adUnitId="@string/publisher_id">
                    </com.google.android.gms.ads.AdView>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>


</LinearLayout>